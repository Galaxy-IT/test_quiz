{
  "parser": "@babel/eslint-parser",
  "env": {
    "es6": true,
    "jquery": true,
    "browser": true
  },
  "ignorePatterns": [
    "gulp/*",
    "build/*"
  ],
  "overrides": [
    {
      "files": [
        "src/**/*.js"
      ],
      "extends": [
        "eslint:recommended",
        "htmlacademy/es6"
      ],
      "rules": {
        "no-unused-vars": "warn",
        "indent": [
          "error",
          2
        ],
        "semi": [
          "error",
          "never"
        ],
        "quotes": [
          "error",
          "backtick"
        ]
      }
    }
  ]
}
