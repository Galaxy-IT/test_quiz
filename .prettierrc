{
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 120,
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "twigTabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "plugins": ["./node_modules/prettier-plugin-twig-melody"],
  "twigPrintWidth": 120,
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": ["*.twig"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
